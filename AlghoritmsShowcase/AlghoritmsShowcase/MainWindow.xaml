<Window x:Class="AlghoritmsShowcase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlgorytmySzyfrowania"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Symulator algorytmów szyfrowania"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="5"/>

        <Grid Grid.Row="1" Margin="0 10 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="Tekst wejściowy:"/>
                <TextBox x:Name="InputBox" Height="120" TextWrapping="Wrap"/>

                <TextBlock Text="Metoda:" Margin="0 10 0 0"/>
                <ComboBox x:Name="MethodBox" Height="25"/>

                <TextBlock Text="Klucz:" Margin="0 10 0 0"/>
                <TextBox x:Name="KeyBox" Height="25"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Wynik:"/>
                <TextBox x:Name="OutputBox"
                         Height="200"
                         TextWrapping="Wrap"
                         IsReadOnly="True"/>
            </StackPanel>
        </Grid>

        <!-- buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="EncryptButton"
                    Width="120" Height="35"
                    Margin="5"
                    Click="EncryptButton_Click"
                    Content="Szyfruj"/>

            <Button x:Name="DecryptButton"
                    Width="120" Height="35"
                    Margin="5"
                    Click="DecryptButton_Click"
                    Content="Deszyfruj"/>
        </StackPanel>
    </Grid>

</Window>
